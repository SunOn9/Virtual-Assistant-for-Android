MDScreen:
    name: "signin"
    MDFloatLayout:
        Image:
            source: 'picture/Logo.png'   
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .75}
            width: 300
            allow_stretch: True

        MDTextField:
            id: mail
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .55}
            hint_text: "Enter email"
            helper_textmode: "persistent"
            helper_text: ""
            line_color_focus: 0,0,0,1

        MDTextField:
            id: passw
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .425}
            hint_text: "Enter password"
            helper_textmode: "persistent"
            helper_text: ""
            line_color_focus: 0,0,0,1
            password: True

        MDTextField:
            id: repass
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .3}
            hint_text: "Enter password"
            helper_textmode: "persistent"
            helper_text: ""
            line_color_focus: 0,0,0,1
            password: True

        MDFlatButton:
            text: "Sign In"
            size_hint: .25, .1
            pos_hint: {"center_x": .5, "center_y": .15}
            on_release:
                app.signin(mail.text, passw.text, repass.text)
                