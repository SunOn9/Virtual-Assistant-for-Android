MDScreen:
    name: "login"
    MDFloatLayout:
        
        Image:
            source: 'picture/Logo.png'   
            size_hint_y: None
            pos_hint: {"center_x": .5, "center_y": .75}
            width: 300
            allow_stretch: True

        MDTextField:
            id: mail
            
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .57}
            hint_text: "Enter email"
            helper_textmode: "persistent"
            helper_text: ""
            line_color_focus: 0,0,0,1

        MDTextField:
            id: passw
            size_hint_x: .85
            pos_hint: {"center_x": .5, "center_y": .42}
            hint_text: "Enter password"
            helper_textmode: "persistent"
            helper_text: ""
            line_color_focus: 0,0,0,1
            password: True

        MDTextButton:
            text: "Sign In"
            haling: "center"
            size_hint: .25, .1
            pos_hint: {"center_x": .5, "center_y": .1}
            on_release: 
                app.to_sign()

        MDFlatButton:
            text: "Login"
            pos_hint: {"center_x": .5, "center_y": .2}
            on_release: 
                app.check_login(mail.text ,passw.text)
            